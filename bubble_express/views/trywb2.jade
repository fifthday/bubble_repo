html
	head
		|<script src=" http://tjs.sjs.sinajs.cn/open/api/js/wb.js?appkey=1166443256" type="text/javascript" charset="utf-8"></script>

		script
			function sina_login() {
				document.getElementById("result").innerHTML = "begin<br/>";
				WB2.login(login_result);
			}
			function login_result() {
				document.getElementById("result").innerHTML += "success<br/>";
				var isLogin = WB2.checkLogin();
				if(isLogin) {
					document.getElementById("result").innerHTML += "isLogin!";
				} else {
					document.getElementById("result").innerHTML += "isNotLogin!";
				}

			}

			WB2.anyWhere(function(W){
				W.widget.connectButton({
					id: "wb_btn",
					type: '3,2',
					callback : {
						login:function(o){
							alert(o.screen_name);
						},
						logout:function(){
							alert('logout');
						}
					}
				});
			});
			
	body

		
		h1 #{title}
		|<input type='button' value='login' onclick='sina_login()' />
		br
		div#result


		h2 widget

		|<input type='button' value='widget' onclick='weibowidget()' />
		div#wb_btn
